<h1>Your courses</h1>

<div class = "table-responsive">
<table class = "table table-striped">
  <thead>
    <tr>
      <th> Course </th>
      <th> Meeting Days </th>
    </tr>
  </thead>

  <% @user_courses.each do |x| %>
    <tr>
      <td><%= x.name%></td>
      <% week = WeekSauce.new(x.daysmask) %>
      <% output = week.to_hash %>
      <td>
      <% output.each do |key, value| %>
        <% if value == true %>
          <%= key.to_s %>
        <%end  %>
      <%end  %>
      </td>
    </tr>
  <% end %>
</table>
</div>

<p><%= link_to "Create Course", "/courses/new" %></p>
